.courses-list(layout='row')
  span(flex='')
  div(layout='column')
    h1 Courses
    form.md-whiteframe-z1(ng-submit='save()', name='form', novalidate='', layout-padding='')
      p Add a course
      md-input-container
        label Name
        input(ng-model='newCourse.name', placeholder='Name')
      input.md-button(type='submit', value='Add')
    
    ul
      li(ng-repeat='course in courses')
        p 
          a(href='/courses/{{course._id}}') {{course.name}}
          button(ng-click='remove(course)') &times;

    p Total number of courses: {{courses.length}}
  span(flex='')